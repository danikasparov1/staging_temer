<odoo>
    <record id="view_crm_reception_form" model="ir.ui.view">
        <field name="name">crm.reception.form</field>
        <field name="model">crm.reception</field>
        <field name="arch" type="xml">
            <form string="Reception Lead">
                <header>
                    <button name="action_create_crm_lead" string="ðŸ’¾ Save" type="object"
                            class="btn-primary oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_name" string="Customer Name"/>
                            <field name="country_id"/>
                            
                            <!-- Updated phone fields section -->
                            <div class="o_group">
                                <field name="phone_prefix" invisible="1" readonly="1" class="oe_inline" style="width: 20%;"/>
                                <field name="new_phone" placeholder="Phone number" class="oe_inline" style="width: 45%; margin-left: 0px;"/>
                            </div>
                            <field name="full_phone" invisible="1" widget="many2many_tags"/>
                            <!-- <field name="full_phone_ids" invisible="1"/> -->
                            
                            <field name="secondary_phone"/>
                        </group>
                        <group>
                            <field name="site_ids" widget="many2many_tags"/>
                            <field name="source_id"/>
                            <field name="sales_person"/>
                            <field name="wing_id"/>
                            <field name="assigned_manager_id"/>
                            <field name="phone_number_message" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>